<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomFont">
        <attr name="myFont" format="string" />
        <attr name="disable_emoji" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BadgedTabLayout">
        <attr name="badgeTextColor" format="color" />
        <attr name="badgeTextSize" format="dimension" />
        <attr name="badgeSelectedTextColor" format="color" />
        <attr name="badgeBackgroundColor" format="color" />
        <attr name="badgeSelectedBackgroundColor" format="color" />
        <attr name="tabTextSize" format="dimension" />
    </declare-styleable>


    <declare-styleable name="LabelsView">
        <attr name="max_labels" format="integer" />
        <attr name="show_cross" format="boolean" />
        <attr name="icon_cross" format="reference" />
        <attr name="text_color" format="color" />
        <attr name="text_size" format="dimension" />
        <attr name="label_background_res" format="reference" />
        <attr name="label_clickable" format="boolean" />
        <attr name="label_padding" format="dimension" />
    </declare-styleable>
</resources>
