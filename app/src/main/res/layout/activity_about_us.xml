<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <include
        android:id="@+id/iv_header"
        layout="@layout/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_event"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_view_pager"
                android:scaleType="centerCrop"
                android:src="@drawable/bg2" />


            <rutul.com.ecampus.components.CustomTextView
                android:id="@+id/tv_event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginEnd="@dimen/dimen_8"
                android:lineSpacingExtra="@dimen/dimen_2"
                android:padding="@dimen/dimen_1"
                android:text="@string/dummy_text"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/dimen_50px"
                app:myFont="@string/REGULAR" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/dimen_8"
                android:alpha="0.5"
                android:background="@color/colorGreen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8"
                android:layout_marginEnd="@dimen/dimen_8"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/height_70px"
                    android:layout_height="@dimen/height_70px"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_phone" />

                <rutul.com.ecampus.components.CustomTextView
                    android:id="@+id/tv_event_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_8"
                    android:padding="@dimen/dimen_1"
                    android:text="+8801248545444"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/dimen_54px"
                    app:myFont="@string/MEDIUM" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8"
                android:layout_marginTop="@dimen/dimen_8"
                android:layout_marginEnd="@dimen/dimen_8"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/height_70px"
                    android:layout_height="@dimen/height_70px"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_navigation_blue" />

                <rutul.com.ecampus.components.CustomTextView
                    android:id="@+id/tv_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_8"
                    android:padding="@dimen/dimen_1"
                    android:text="454, Upper Manthattan NY"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/dimen_54px"
                    app:myFont="@string/MEDIUM" />
            </LinearLayout>

            <rutul.com.ecampus.components.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:layout_marginStart="@dimen/dimen_8"
                android:padding="@dimen/dimen_1"
                android:text="@string/social_network"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/dimen_60px"
                app:myFont="@string/SEMIBOLD" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8"
                android:layout_marginEnd="@dimen/dimen_8"
                android:layout_marginBottom="@dimen/dimen_8"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_facebook"
                    android:layout_width="@dimen/height_110px"
                    android:layout_height="@dimen/height_110px"
                    android:layout_marginEnd="@dimen/dimen_8"
                    android:src="@drawable/ic_facebook" />

                <ImageView
                    android:id="@+id/iv_twitter"
                    android:layout_width="@dimen/height_110px"
                    android:layout_height="@dimen/height_110px"
                    android:layout_marginStart="@dimen/dimen_8"
                    android:layout_marginEnd="@dimen/dimen_8"
                    android:src="@drawable/ic_twitter" />

                <ImageView
                    android:id="@+id/iv_google"
                    android:layout_width="@dimen/height_110px"
                    android:layout_height="@dimen/height_110px"
                    android:layout_marginStart="@dimen/dimen_8"
                    android:layout_marginEnd="@dimen/dimen_8"
                    android:src="@drawable/ic_google" />

                <ImageView
                    android:id="@+id/iv_youtube"
                    android:layout_width="@dimen/height_110px"
                    android:layout_height="@dimen/height_110px"
                    android:layout_marginStart="@dimen/dimen_8"
                    android:src="@drawable/ic_youtube" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>