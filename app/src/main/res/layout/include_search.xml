<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_search_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_150px"
    android:background="@drawable/main_bg_blue"
    android:orientation="horizontal"
    android:weightSum="1">

    <rutul.com.ecampus.components.CustomEditText xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/et_search_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_150px"
        android:background="@null"
        android:cursorVisible="true"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="@dimen/dimen_15"
        android:gravity="center_vertical"
        android:hint="Find Specific Job"
        android:imeOptions="actionSearch"
        android:inputType="textCapSentences"
        android:lines="1"
        android:maxLength="160"
        android:maxLines="1"
        android:paddingStart="@dimen/dimen_8"
        android:paddingEnd="@dimen/dimen_8"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/dimen_54px"
        app:myFont="@string/REGULAR"
        tools:ignore="RtlSymmetry" />
</RelativeLayout>
